{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "typeRoots": ["./types", "./node_modules/@types"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }